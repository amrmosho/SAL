<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pcland15.ismail.sal.categories">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/navbar"
        android:id="@+id/navbar2"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:id="@+id/button4"
            style="@style/navbar_back_button"
            android:onClick="goBack"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sign_categories"
            android:id="@+id/categories_title"
            style="@style/navbar_title"

            />


    </RelativeLayout>

    <RelativeLayout
        style="@style/main_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/navbar2"
        >


        <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quiz_cat_List"
            android:columnWidth="90dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="70dp"

            />


        <EditText
            android:id="@+id/quiz_catserchin"
            style="@style/searchBT" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/categories_image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
android:scaleType="fitCenter"
            />
    </RelativeLayout>
    </RelativeLayout>
