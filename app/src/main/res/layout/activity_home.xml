<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pcland15.ismail.sal.home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/navbar"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/navbar">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:id="@+id/button4"
            style="@style/navbar_back_button"
            android:onClick="goBack"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/home"
            android:id="@+id/home_title"
            style="@style/navbar_title"

            />


    </RelativeLayout>


    <RelativeLayout

        android:layout_height="match_parent"
        android:layout_width="match_parent"
       android:layout_below="@+id/navbar">
    <ImageButton
        android:id="@+id/imageButton"
        style="@style/home_main_bt"
        android:layout_width="match_parent"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="gotoSigns"
        android:src="@drawable/home_bt_1"


        />


    <ImageButton
        android:id="@+id/imageButton2"
        style="@style/home_main_bt"
        android:layout_width="match_parent"

        android:layout_below="@+id/imageButton"
        android:onClick="gotoMySigns"
        android:src="@drawable/home_bt_2"

        />

    <ImageButton
        android:id="@+id/imageButton3"
        style="@style/home_main_bt"
        android:layout_width="match_parent"
        android:layout_below="@+id/imageButton2"
        android:onClick="gotoQuizs"

        android:src="@drawable/home_bt_3"


        />


    <ImageButton
        android:id="@+id/imageButton4"
        style="@style/home_main_bt"
        android:layout_width="match_parent"
        android:layout_below="@+id/imageButton3"
        android:onClick="gotoAdmin"
        android:src="@drawable/home_bt_4"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_below="@+id/imageButton4"
        android:layout_alignRight="@+id/imageButton4"
        android:layout_alignEnd="@+id/imageButton4"
        android:layout_marginTop="20dp"


       android:src="@drawable/person"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcome"
        android:id="@+id/textView3"
        android:layout_marginBottom="41dp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/home_name_title"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4" />

    </RelativeLayout>

</RelativeLayout>
