<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pcland15.ismail.sal.newsign">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        style="@style/navbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp">

        <ImageButton
            android:id="@+id/button4"
            style="@style/navbar_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goBack"

            android:text="@string/back" />


        <ImageButton
            android:id="@+id/button5"
            style="@style/navbar_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:onClick="userRegSend"

            android:text="@string/send" />

        <TextView
            android:id="@+id/textView2"
            style="@style/navbar_title"
            android:text="@string/newsign_title"
            android:textAppearance="?android:attr/textAppearanceLarge"

            />
    </RelativeLayout>

    <RelativeLayout style="@style/main_data"

        >


        <LinearLayout
            android:id="@+id/insert_bts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/navbar"
            android:layout_marginTop="30dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/imageareaLayout"

                style="@style/textarea"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/imageButton"
                    style="@style/image_button"
                    android:layout_width="match_parent"


                    android:onClick="select_itemimage" />

                <ImageView
                    android:id="@+id/newitem_ButtonImageView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/no_image"
                    android:scaleType="fitCenter" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/fileLayout"

                style="@style/textarea"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">


                <ImageButton
                    style="@style/video_button"
                    android:layout_width="match_parent"
                    android:onClick="select_file" />

                <TextView
                    style="@style/navbar_title"
                    android:layout_width="match_parent"
                    android:text="..."
                    android:id="@+id/filePath"
                    android:textAlignment="center" />
            </LinearLayout>


            <LinearLayout
                style="@style/textarea"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/newitem_name_input"
                    style="@style/form_input_text"
                    android:hint="@string/newsign_name" />

                <Spinner
                    android:id="@+id/newitem_cats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:hint="@string/newsign_cat"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:id="@+id/newitem_desc_input"
                    style="@style/form_input_text"
                    android:hint="@string/newsign_desc" />

            </LinearLayout>

            <Button
                android:id="@+id/imageButton4"
                style="@style/button"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/desc"
                android:text="@string/send"

                android:onClick="mySendItem"/>


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
