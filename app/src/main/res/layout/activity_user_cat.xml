<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pcland15.ismail.sal.user_cat">





    <RelativeLayout
        android:id="@+id/mytopbar"
        style="@style/navbar">

        <ImageButton
            android:id="@+id/button4"
            style="@style/navbar_back_button"

            android:onClick="goback"
            android:text="@string/back" />



        <TextView
            android:id="@+id/textView2"
            style="@style/navbar_title"
            android:text="@string/addquiz_q"
            android:textAppearance="?android:attr/textAppearanceLarge"

            />
    </RelativeLayout>


    <RelativeLayout

        android:layout_below="@+id/mytopbar"
        style="@style/main_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:orientation="vertical"
                style="@style/textarea"
                >

                <EditText
                    android:id="@+id/cat_title"
                    style="@style/form_input_text"
                    android:hint="@string/newsign_name"

                    />


            </LinearLayout>


            <ImageButton
                android:id="@+id/imageButton"
                style="@style/image_button"
                android:layout_width="match_parent" />
            <Button
                android:id="@+id/imageButton4"
                style="@style/button"
                android:text="@string/send" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
